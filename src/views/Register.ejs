<!DOCTYPE html>
<html lang="en">
    <%-include('./partials/head', {title: "Register"})%> 
<body>
    <%-include('./partials/header')%> 
    <main>
        <form action="/register" method="POST"  class="formRegister">

            <div class="itemRegister">
                <label for="firstName" >Nombre</label>
                <input 
                    type="text" 
                    name="firstName" 
                    id="userName" 
                    placeholder="Mencioname tu nombre"
                    class="formControlRegister <%= locals.errors && errors.firstName ? 'is-invalid' : null %>"
                    value="<%= locals.oldData ? oldData.firstName : null %> ">

                <% if (locals.errors && errors.firstName) { %>
                    <div class="errorRegister">
                        <span><%= errors.firstName.msg %> </span>
                    </div>
                <% } %>
            </div>
            
            <div class="itemRegister">
                <label for="lastName">Apellido</label>
                <input 
                    type="text" 
                    name="lastName" 
                    id="lastName" 
                    class="formControlRegister <%= locals.errors && errors.lastName ? 'is-invalid' : null %>"
                    value="<%= locals.oldData ? oldData.lastName : null %>" 
                    placeholder="Mencioname tu Apellido" >

                <% if (locals.errors && errors.lastName) { %>
                    <div class="errorRegister">
                        <span><%= errors.lastName.msg %> </span>
                    </div>
                <% } %>
            </div>
            

            <div class="itemRegister">
                <label for="userAs">Nombre de participante</label>
                <input 
                    type="text" 
                    name="userAs" 
                    id="userAs"
                    class="formControlRegister <%= locals.errors && errors.userAs ? 'is-invalid' : null %>"
                    value="<%= locals.oldData ? oldData.userAs : null %>"
                    placeholder="Nombrate para el juego">

                <% if (locals.errors && errors.userAs) { %>
                    <div class="errorRegister">
                        <span><%= errors.userAs.msg %> </span>
                    </div>
                <% } %>
            </div>
            
            <div class="itemRegister">
                <label for="password">Contraseña</label>
                <input 
                    type="password" 
                    name="password" 
                    id="password" 
                    placeholder="Create una contraseña"
                    class="formControlRegister <%= locals.errors && errors.password ? 'is-invalid' : null %>">

                <% if (locals.errors && errors.password) { %>
                    <div class="errorRegister">
                        <span><%= errors.password.msg %> </span>
                    </div>
                <% } %>
            </div>
            

            <div class="itemRegister">
                <label for="confirmPassword">Confirmación de contraseña</label>
                <input 
                    type="password" 
                    name="confirmPassword" 
                    id="confirmPassword" 
                    placeholder="Confirma tu contraseña"
                    class="formControlRegister <%= locals.errors && errors.confirmPassword ? 'is-invalid' : null %>">
                <% if (locals.errors && errors.confirmPassword) { %>
                    <div class="errorRegister">
                        <span><%= errors.confirmPassword.msg %> </span>
                    </div>
                <% } %>
            </div>
            
            <div class="itemRegister">
                <label for="preferences">Gustos</label>
                <textarea name="preferences" id="preferences" cols="40" rows="5" placeholder="¿Con qué quieres que te endulzen?"></textarea>
            </div>
            
            <div class="itemRegister">
                <label for="dislike">Disgustos</label>
                <textarea name="dislikes" id="dislikes" cols="40" rows="5" placeholder="¿Que no quisieras que obsequiaran?"></textarea>
            </div>
            
            <div class="itemRegister">
                <label for="allergies">Alergias</label>
                <textarea name="allergies" id="allergies" cols="40" rows="5" placeholder="¿Eres alérgico a algo?"></textarea>
            </div>
            

            <!--<label for="group">Elige tu grupo de amigos</label>
            <select name="group" id="group">
                <%# for( let i = 0; i < groups.length; i++ ) { %>
                    <option value="<%#= groups[i].idGroup%>"><%#= groups[i].nameGroup %> </option>
                <%# } %>
            </select>-->

            
            <button type="submit">Registrarme</button>

            <a href="/group/create">Crear nuevo grupo</a>
        </form>
    </main>
    <%-include('./partials/footer')%> 
</body>
</html>